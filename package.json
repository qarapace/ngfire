{
  "name": "@qarapace/ngfire",
  "version": "0.0.2",
  "description": "Minimal Angular wrapper around the Firebase JS SDK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/qarapace/ngfire"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./app": {
      "types": "./dist/app/index.d.ts",
      "default": "./dist/app/index.js"
    },
    "./analytics": {
      "types": "./dist/analytics/index.d.ts",
      "default": "./dist/analytics/index.js"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "default": "./dist/auth/index.js"
    },
    "./firestore": {
      "types": "./dist/firestore/index.d.ts",
      "default": "./dist/firestore/index.js"
    },
    "./functions": {
      "types": "./dist/functions/index.d.ts",
      "default": "./dist/functions/index.js"
    },
    "./emulators": {
      "types": "./dist/emulators/index.d.ts",
      "default": "./dist/emulators/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "peerDependencies": {
    "@angular/core": ">=19.0.0",
    "firebase": ">=11.0.0",
    "rxjs": ">=7.0.0"
  },
  "devDependencies": {
    "@angular/core": "^21.0.6",
    "@angular/router": "^21.0.6",
    "@ngrx/signals": "^21.0.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-unused-imports": "^4.0.0",
    "firebase": "^12.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "angular",
    "firebase",
    "firestore",
    "rxjs",
    "signals"
  ]
}
