{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "include": [
    "app/**/*.ts",
    "analytics/**/*.ts",
    "auth/**/*.ts",
    "firestore/**/*.ts",
    "functions/**/*.ts",
    "emulators/**/*.ts"
  ]
}
